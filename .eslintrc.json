{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["@typescript-eslint", "vue"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // turn off the rule that throws errors for undeclared variables
    "no-undef": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      // Turn off the rule that throws errors for undeclared variables
      // in pages and layouts components
      "files": ["pages/**/*.vue", "layouts/**/*.vue"],
      "rules": {
        "vue/multi-word-component-names": "off"
      }
    }
  ]
}
